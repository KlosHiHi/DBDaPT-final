                <input asp-for="Shoe.Discount" class="form-control" />
                <span asp-validation-for="Shoe.Discount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shoe.Quantity" class="control-label"></label>
                <input asp-for="Shoe.Quantity" class="form-control" />
                <span asp-validation-for="Shoe.Quantity" class="text-danger"></span>
