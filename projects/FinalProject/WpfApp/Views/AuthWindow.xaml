<Window x:Class="WpfApp.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="Главная" Height="450" Width="800" Background="AntiqueWhite" 
        WindowStartupLocation="CenterScreen" 
        MinHeight="300" MinWidth="500" 
        MaxWidth="800" MaxHeight="450">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Логин"/>
        <TextBlock Text="Пароль" Grid.Row="1"/>
        <TextBox x:Name="LoginTextBox" Grid.Column="1"/>
        <PasswordBox x:Name="PasswordBox" Grid.Column="1" Grid.Row="1"/>
        <Button x:Name="AuthButton" Content="Авторизация" Grid.Row="2" Grid.ColumnSpan="2" Click="AuthButton_Click"/>
    </Grid>
</Window>
